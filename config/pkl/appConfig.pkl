@go.Package { name = "github.com/gracefulm/go-pkl-sample/config" }
module introduction.of.pkl

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.5.3#/go.pkl"

typealias LogLevel = "DEBUG"|"INFO"|"WARN"|"ERROR"
class LogConfig {
  logLevel: LogLevel = "INFO"
}

typealias Port = UInt16(this > 0)
class AppConfig {

  host: String = "0.0.0.0"

  port: Port = 443

  logConfig: LogConfig
}

appConfig: AppConfig = new {
  port = 8080
  host = "127.0.0.1"
  logConfig = new {
    logLevel = "DEBUG"
  }
}
